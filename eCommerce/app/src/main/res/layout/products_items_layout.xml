<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <ImageView
            android:id="@+id/product_image"
            android:layout_below="@id/product_name"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
        />

        <!--        Price-->

        <ImageView
            android:id="@+id/icon_afterpay"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:layout_alignTop="@id/product_image"
            android:layout_alignRight="@id/product_image"
            android:layout_marginTop="148dp"
            android:layout_marginRight="-10dp"
            android:paddingRight="10dp"
            android:src="@drawable/afterpay" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_image"
            android:text="Giá"
            android:textAlignment="textStart"
            android:layout_marginStart="30dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/icon_price"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/coin"
            android:layout_alignLeft="@id/product_price"
            android:layout_alignTop="@id/product_price"
            android:layout_alignBottom="@id/product_price"
            android:layout_marginStart="-20dp"
            android:paddingRight="10dp"/>

        <!--        Description-->

        <ImageView
            android:id="@+id/icon_rating"
            android:layout_width="120dp"
            android:layout_height="68dp"
            android:layout_alignTop="@id/product_price"
            android:layout_alignRight="@id/product_price"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="4dp"
            android:paddingRight="10dp"
            android:src="@drawable/rating" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Mô tả"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/product_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_description"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:text="15 đã bán"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/product_freeship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_seller"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Miễn phí giao hàng"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/icon_des"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pencil"
            android:layout_alignLeft="@id/product_description"
            android:layout_alignTop="@id/product_description"
            android:layout_marginStart="-20dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="3dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>